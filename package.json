{
  "name": "comitty",
  "version": "1.0.1",
  "type": "module",
  "description": "AI-powered commit message generator for Git. Analyzes staged changes and generates high-quality commit messages using AI.",
  "main": "dist/cli.js",
  "bin": {
    "comitty": "dist/cli.js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE",
    ".comittyrc.example"
  ],
  "scripts": {
    "prepublishOnly": "npm run build",
    "build": "bun build src/cli.ts --outdir dist --target node --minify",
    "dev": "bun run src/cli.ts",
    "start": "node dist/cli.js",
    "test": "node test-basic.js",
    "prepack": "npm run build"
  },
  "keywords": [
    "git",
    "commit",
    "ai",
    "cli",
    "openrouter",
    "openai",
    "anthropic",
    "typescript",
    "commit-message",
    "conventional-commits",
    "automation",
    "developer-tools"
  ],
  "author": {
    "name": "Comitty Team",
    "email": "comitty@example.com",
    "url": "https://github.com/your-username/comitty"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/comitty.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/comitty/issues"
  },
  "homepage": "https://github.com/your-username/comitty#readme",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "commander": "^11.0.0",
    "chalk": "^5.3.0",
    "inquirer": "^9.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
